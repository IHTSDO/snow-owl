<assembly	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">	<id>dist</id>	<formats>		<format>zip</format>	</formats>	<fileSets>		<fileSet>			<!-- Copy release files from the ROOT of the repository -->			<directory>${project.basedir}/../../</directory>			<outputDirectory>/</outputDirectory>			<includes>				<include>CHANGELOG*</include>				<include>README*</include>				<include>LICENSE*</include>				<include>NOTICE*</include>			</includes>		</fileSet>	</fileSets>	<moduleSets>		<moduleSet>			<useAllReactorProjects>true</useAllReactorProjects>			<!-- Unpack Snow Owl with MySQL configuration -->			<binaries>				<attachmentClassifier>mysql</attachmentClassifier>				<includeDependencies>false</includeDependencies>			</binaries>			<includes>				<include>com.b2international.snowowl:com.b2international.snowowl.server.update</include>			</includes>		</moduleSet>	</moduleSets></assembly>